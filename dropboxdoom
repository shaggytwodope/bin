#!/bin/bash

STATUS=$(dropbox status)

if [ "$STATUS" == "Dropbox isn't running!" ]; then
    START=$(dropbox start)
fi

COUNT_DONE=1
while true
do
    STATUS=$(dropbox status)
    if [ "$STATUS" == "Up to date" ]; then
            COUNT_DONE=`expr $COUNT_DONE + 1`
            if [ $COUNT_DONE -gt 10 ]
            then
                    STOP=$(dropbox stop)
                    break;
            fi
    fi
done
exit 0
